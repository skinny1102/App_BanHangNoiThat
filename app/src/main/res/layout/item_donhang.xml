<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:layout_margin="15dp">
    <androidx.cardview.widget.CardView
        android:id="@+id/img_cardview"
        app:cardCornerRadius="10dp"
        card_view:cardElevation="3dp"
        app:cardBackgroundColor="@color/quahanh"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:foreground="@drawable/border_card_view_donhang"
        >
        <LinearLayout

            android:paddingTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <!--        Mã Đơn hàng-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"

                android:layout_marginBottom="15dp">
                <TextView
                    android:textColor="@color/black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Mã Đơn hàng :"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="15dp">
                </TextView>
                <TextView
                    android:id="@+id/tv_madonhang"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="123458768">
                </TextView>
            </LinearLayout>

            <!--        Mã Đơn hàng-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="15dp">
                <TextView
                    android:textColor="@color/black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ngày đặt hàng :"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="15dp">
                </TextView>
                <TextView
                    android:id="@+id/tv_ngaydathang"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="23/7/1999">
                </TextView>
            </LinearLayout>
            <!--        Mã Đơn hàng-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="15dp">
                <TextView
                    android:textColor="@color/black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Trạng thái :"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="15dp">
                </TextView>
                <TextView
                    android:id="@+id/tv_trangthai"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Đã xác nhân">
                </TextView>
            </LinearLayout>

        </LinearLayout>


    </androidx.cardview.widget.CardView>
</LinearLayout>